%
% Fonts (Fonts in comments are suggestions for use instead of the font
% appearing in the xLoadFont predicate).
%

xLoadFont(default_display,ButtonFont,
         "-*-helvetica-bold-r-*-*-14-*-*-*-*-*-*-*"),
	                                                  %% avantgarde_demi10 
	                                                  %% 8x13Bold
							  %% times_bold10
							  %% courier_bold10
