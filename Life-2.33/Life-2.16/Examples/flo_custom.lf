%
% Main Initialization
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

init_default_values :-

	setq(petal_color,red),
	setq(stamen_color,gold),
	setq(leaf_color,green),
	setq(defaultColor,'forest green'),
	setq(background_color,black),
	
	setq(xstart,350) ,
	setq(ystart,650) ,
	setq(axstart,-30) ,
	setq(aystart,150) ,
	setq(azstart,0) ,
	setq(deriv_num,4) ,
	setq(zoom_fact,1) ,

	setq(postout_filename,"flowers.ps").
